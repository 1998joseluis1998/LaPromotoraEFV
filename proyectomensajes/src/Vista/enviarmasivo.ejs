    <!-- Navbar End -->

    <div class="container-fluid page-header py-6 my-6 mt-0 wow fadeIn" data-wow-delay="0.1s" src="img/FondoEFV17.jpg">
        <div class="container text-center">
            <h1 class="display-4 text-white animated slideInDown mb-4">Buscar por Agencia</h1>
        </div>
    </div>



    <!-- Page Header End -->
    <div class="bg-primary text-center p-2" style="margin-bottom: 100px;">
        <h1 class="mb-4">Ingresa los campos para buscar cliente.</h1>
        <button id="btnadd" class="btn btn-dark w-100 py-3">BOTON AÑADIR INPUTS</button>

        <!--Formulario para buscar en la base datos POST-->
        <form action="/buscaragencia" method="POST">
            
            <div id="contenedor" class="container">
                <!--generar inputs-->
            </div>

            <input style="display: none" id="val"name="val" value="0">

            <div class="form-group row mt-5">
                <label for="colFormLabel" style="color: black;" class="col-sm-2 col-form-label">Buscar por
                    Agencia</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="masagencia" placeholder="Ingresa la agencia">
                </div>
            </div>
            <br>
            <div class="form-group row">
                <label for="colFormLabel" style="color: black;" class="col-sm-2 col-form-label">Ingresar porcentaje de
                    Números</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="porcentaje" placeholder="Ingresa el porcentaje">
                </div>
            </div>
            <br>
            <button class="btn btn-dark w-100 py-3">Buscar Cliente</button>
        </form>
    </div>
    <!-- Page Header Start -->
    <div class="container-fluid page-header py-6 my-6 mt-0 wow fadeIn" data-wow-delay="0.1s" src="img/FondoEFV17.jpg">
        <div class="container text-center">
            <h1 class="display-4 text-white animated slideInDown mb-4">Programar Envio de Mensajes</h1>
        </div>
    </div>

    <% if(datostotal!="no" ){%>
        <table class="table" style="margin-bottom: 100px;">
            <thead class="table-dark">
                <th>#</th>
                <th>codigo</th>
                <th>nombre</th>
                <th>numero</th>
                <th>agencia</th>
            </thead>
            <tbody>
                <%for(var i=0;i<datostotal.length;i++){%>
                    <tr>
                        <td>
                            <%=i+1%>
                        </td>
                        <td>
                            <%=datostotal[i].Codigo%>
                        </td>
                        <td>
                            <%=datostotal[i].Nombre%>
                        </td>
                        <td>
                            <%=datostotal[i].Numero%>
                        </td>
                        <td>
                            <%=datostotal[i].Agencia%>
                        </td>
                    </tr>
                    <%}%>
            </tbody>
        </table>
        <%}%>

            <!-- Page Header End -->
            <div class="bg-primary text-center p-5">
                <h1 class="mb-4">Selecciona los campos para programar el envio</h1>
                <div class="container">
                    <form action="/enviarmasivo" method="POST">
                        <div class="row g-3">
                            <form class="row gy-2 gx-3 align-items-center">

                                <div class="col-sm-3" style="color:black">
                                    <form name="fomul">
                                        <p style="color:black"></p>Seleccione chip de origen:
                                        <select id="puerto" name="miSelect">
                                            <option value="1">gsm-1
                                            <option value="2">gsm-2
                                            <option value="3">gsm-3
                                            <option value="4" selected>gsm-4</option>
                                        </select>
                                    </form>
                                    <br>
                                </div>
                            </form>
                            <select id="mensaje" name="mensaje">
                                <%for(var i=0;i<mensajes.length;i++){%>
                                    <option value="<%=mensajes[i]._id%>">
                                        <%=mensajes[i].Mensaje%>
                                    </option>
                                    <%}%>
                            </select>
                            <div class="col-12">
                                <button href='/esperarenvio' class="btn btn-dark w-100 py-3">Enviar Mensajes</button>
                            </div>
                        </div>
                    </form>
                </div>


            </div>
            <!-- Team End -->


            <!-- Footer Start -->

            <!-- Footer End -->


            <!-- Copyright Start -->
            <div class="container-fluid copyright text-center py-4 wow fadeIn" style="margin-top: 100px;"
                data-wow-delay="0.1s">
