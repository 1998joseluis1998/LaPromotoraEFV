            <input style="display: none" id="val" name="val" value="0">
            <div id="todo" class="container text-center">
                <div class="row  mt-2">
                    <div class="form-group col m-2">                        
                            <p style="color:black">Seleccione chip de origen:</p>
                            <select id="puerto" name="miSelect">
