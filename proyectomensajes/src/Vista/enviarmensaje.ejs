<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Drivin - Driving School Website Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">


    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
    <script src="fetch.js"></script>
    <script src="/src/Modelo/Autenticacion/emailer.js"></script>
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner"
        class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->
    <!-- Topbar Start -->
    <div class="container-fluid bg-dark text-light p-0">
        <div class="row gx-0 d-none d-lg-flex">
            <div class="col-lg-7 px-5 text-start">
                <div class="h-100 d-inline-flex align-items-center me-4">
                    <small class="fa fa-map-marker-alt text-primary me-2"></small>
                    <small>Av. Heroínas N°111 esq. España, Cochabamba</small>
                </div>

            </div>
            <div class="col-lg-5 px-5 text-end">
                <div class="h-100 d-inline-flex align-items-center me-4">
                    <small class="fa fa-phone-alt text-primary me-2"></small>
                    <small>4 4222741</small>
                </div>
                <div class="h-100 d-inline-flex align-items-center mx-n2">
                    <a class="btn btn-square btn-link rounded-0 border-0 border-end border-secondary"
                        href="https://www.facebook.com/Lapromotoraefv"><i class="fab fa-facebook-f"></i></a>
                    <a class="btn btn-square btn-link rounded-0 border-0 border-end border-secondary"
                        href="https://www.linkedin.com/company/la-promotora-efv/"><i class="fab fa-linkedin-in"></i></a>
                    <a class="btn btn-square btn-link rounded-0" href="https://www.instagram.com/lapromotoraefv/"><i
                            class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
    </div>
    <!-- Topbar End -->
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light sticky-top p-0">
        <a href="index.html" class="navbar-brand d-flex align-items-center border-end px-4 px-lg-5">
            <h2 class="m-0"><i></i>La promotora</h2>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                <a href="/enviarmensaje" class="nav-item nav-link">Enviar Mensaje</a>
                <a href="/enviarmasivo" class="nav-item nav-link">Programar Envio</a>
                <a href="/crearreporte" class="nav-item nav-link">Crear Reporte</a>
                <a href="/cerrarsesion" class="nav-item nav-link">Cerrar Sesión</a>
            </div>

        </div>
    </nav>

    <div class="container-fluid page-header py-6 my-6 mt-0 wow fadeIn" data-wow-delay="0.1s" src="img/FondoEFV17.jpg">
        <div class="container text-center">
            <h1 class="display-4 text-white animated slideInDown mb-4">Buscar Cliente</h1>
        </div>
    </div>
    <!-- Page Header End -->
    <div class="bg-primary text-center p-2" style="margin-bottom: 100px;">
        <h1 class="mb-4">Ingresa los campos para buscar cliente.</h1>
        <!--Formulario para buscar en la base datos POST-->
        <form action="/buscarcliente" method="POST">
            <div class="form-group row">
                <label for="colFormLabel" style="color: black;" class="col-sm-2 col-form-label">Buscar por
                    Código</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="buscodigo" placeholder="Ingresa el Código">
                </div>
            </div>
            <br>
            <div class="form-group row">
                <label for="colFormLabel" style="color: black;" class="col-sm-2 col-form-label">Buscar por
                    Nombre</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="busnombre" placeholder="Ingresa el Nombre">
                </div>
            </div>
            <br>
            <div class="form-group row">
                <label for="colFormLabel" style="color: black;" class="col-sm-2 col-form-label">Buscar por
                    Número</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="busnumero" placeholder="Ingresa el Número">
                </div>
            </div>
            <br>
            <button class="btn btn-dark w-100 py-3">Buscar Cliente</button>
        </form>
    </div>




    <!-- Page Header envio mensaje Start -->
    <div class="container-fluid page-header py-6 my-6 mt-0 wow fadeIn" style="margin-bottom: 100px;margin-top: 100px;"
        data-wow-delay="0.1s" src="img/FondoEFV17.jpg">
        <div class="container text-center">
            <h1 class="display-4 text-white animated slideInDown mb-4">Enviar Mensaje</h1>
        </div>
    </div>

    <!-- FILTRAR EL BUSCADOR AQUÍ -->
    <% if(datos!="no" ){%>
        <table class="table" style="margin-bottom: 100px;">
            <thead class="table-dark">
                <th>#</th>
                <th>codigo</th>
                <th>nombre</th>
                <th>numero</th>
                <th>agencia</th>
            </thead>
            <tbody>
                <%for(var i=0;i<datos.length;i++){%>
                    <tr>
                        <td>
                            <%=i+1%>
                        </td>
                        <td >
                            <%=datos[i].Codigo%>
                        </td>
                        <td>
                            <%=datos[i].Nombre%>
                        </td>
                        <td>
                            <%=datos[i].Numero%>
                        </td>
                        <td>
                            <%=datos[i].Agencia%>
                        </td>
                    </tr>
                    <%}%>
            </tbody>
        </table>
        <%}%>

         <input style="display: none" id="val" name="val" value="<$=datos[i].Agencia>">
                    <!--TERMINAR EL BUSCADOR-->
                    <!-- Page Header End -->
                    <div class="bg-primary text-center p-5">
                        <h1 class="mb-4">Ingresa los campos para enviar mensaje.</h1>
                        <!--Formulario para mandar con el fetch POST-->
                        <form action="/enviarmensaje" method="POST">
                            <div class="row g-3">
                                <div class="col-sm-6" style="color:black">                        
                                <% if(datos!="no" ){%>
                                    <input style="display: none" name="codigo" value="<%=codigo%>">
                                    <input style="display: none" name="nombre" value="<%=nombre%>">
                                    <input style="display: none" name="numero" value="<%=numero%>">
                                    <input style="display: none" name="agencia" value="<%=agencia%>">
                                <%}%>
                                    <p style="color:black"></p>Seleccione chip de origen:
                                    <select name="puerto">
                                        <option value="gsm-1" id="numerochip">gsm-1
                                        <option value="gsm-2" name="numerochip">gsm-2
                                        <option value="gsm-3" name="numerochip">gsm-3
                                        <option value="gsm-4" name="numerochip"selected>73348513</option>
                                    </select>
                                    <br>
                                </div>
                                <br>
                                <div class="form-floating">
                                    <textarea class="form-control border-0" id="mensajeescrito" name="mensajeescrito"
                                        style="height: 100px"></textarea>
                                    <label style="color:black" for="message">Ingresa el mensaje</label>
                                </div>
                                <div class="col-sm-24" style="color:black">
                                    <p style="color:black"></p>Seleccione un mensaje por defecto :

                                    <select id="mensaje" name="mensaje">
                                        <%for(var i=0;i<mensajes.length;i++){%>
                                            <option value="<%=mensajes[i]._id%>">
                                                <%=mensajes[i].Mensaje%>
                                            </option>
                                            <%}%>
                                    </select>
                                </div>

                                <div class="col-12">
                                    <p id="valores"></p>
                                    <button class="btn btn-dark w-100 py-3">Enviar Mensaje</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    </div>

                    <!-- Team End -->


                    <!-- Footer Start-->
                    <!-- Footer End -->


                    <!-- Copyright Start -->
                    <div class="container-fluid copyright text-center py-4 wow fadeIn" style="margin-top: 100px;"
                        data-wow-delay="0.1s">
                        &copy; <a href="#">La Promotora EFV </a>
                        <p style="color:aliceblue"> 2023 Todos los Derechos Reservados.</p>
                    </div>
                    <!-- Copyright End -->


                    <!-- Back to Top -->
                    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i
                            class="bi bi-arrow-up"></i></a>


                    <!-- JavaScript Libraries -->
                    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
                    <script src="lib/wow/wow.min.js"></script>
                    <script src="lib/easing/easing.min.js"></script>
                    <script src="lib/waypoints/waypoints.min.js"></script>
                    <script src="lib/owlcarousel/owl.carousel.min.js"></script>

                    <script>
                        var mensajeSelect = document.getElementById("mensaje")
                        var mensajeText = document.getElementById("mensajeescrito")
                        mensajeText.addEventListener("change", (e) => {
                            if (e.target.value != "") {
                                mensajeSelect.disabled = true;
                            }
                            else {
                                mensajeSelect.disabled = false;
                            }
                        })
                    </script>
                    <!-- Template Javascript -->
                    <script src="js/main.js"></script>
</body>

</html>